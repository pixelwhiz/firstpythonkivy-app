
<TextField@MDTextField>:
    size_hint_x: None
    normal_color: color_shadow
    active_color: color_shadow

<loginForm>:
    name: "loginForm"
    MDBoxLayout:
        orientation: "vertical"
        padding:[dp(0),dp(0),dp(0),dp(0)]
        MDTopAppBar:
            title: "Selamat Datang"
            md_bg_color: "#6495ED"
            pos_hint: {"center_x": 0.5}
            right_action_items: [["dots-vertical", lambda x: app.callback(x, "auth")]]

        MDBoxLayout:
            pos_hint: {"center_x": .5, "center_y": .5}
            padding:[dp(25),dp(25),dp(25),dp(25)]
            Image:
                source: "images/user.png"
                size: self.texture_size

        MDBoxLayout:
            padding:[dp(25),dp(25),dp(25),dp(25)]
            pos_hint: {"center_x": .67, "center_y": 1.0}
            size_hint_x: .75
            size_hint_y: .15
            cols: 1
            MDLabel:
                text: "Log In"
                font_size: 40
                font_name: "fonts/Poppins-Bold.ttf"

        MDGridLayout:

            pos_hint: {"center_x": .5, "center_y": .75}
            size_hint_x: .95
            size_hint_y: .15
            #md_bg_color: "#f5f5f5"
            
            cols: 1
            padding:[dp(40),dp(35),dp(40),dp(35)]
            spacing:dp(10)

            MDTextField: 
                id: email
                hint_text: "Email"
                font_name: "fonts/Poppins-Medium.ttf"
                current_hint_text_color: 0, 0, 0, 1
                helper_text_mode: "persistent"
                helper_text: "example@gmail.com"
                
            MDTextField: 
                id: password
                hint_text: "Password"
                font_name: "fonts/Poppins-Medium.ttf"
                current_hint_text_color: 0, 0, 0, 1
                password: True

        MDBoxLayout:
            #pos_hint: {"center_x": .5, "center_y": .75}
            orientation: "vertical"
            padding:[dp(50),dp(50),dp(50),dp(50)]
            size: 100, 200
            cols: 1
            MDRaisedButton:
                text: "Masuk"
                font_name: "fonts/Poppins-Medium.ttf"
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": .5}
                background_color: "#6495ED"
                halign: "center"
                on_release: 
                    #app.Firebase.sign_in(email.text, password.text)
                    app.login(email.text, password.text)
                    #app.connect(email.text)
                #on_press: root.registerForm()
                #on_press: app.root.current = 'registerForm'
            MDFlatButton:
                text: "Buat Akun"
                font_name: "fonts/Poppins-Medium.ttf"
                size_hint_x: .5
                pos_hint: {"center_x": .5, "center_y": .5}
                background_color: "#6495ED"
                halign: "center"
                on_release: 
                    app.change_screen("registerForm")
                #on_press: root.registerForm()
                #on_press: app.root.current = 'registerForm'